    "download": {
        "download_path": "src/auto_download/Downloads",
        "allowed_extensions": [
            ".pdf",
            ".docx",
            ".doc",
            ".xlsx",
            ".ppt",
            ".pptx",
            ".zip",
            ".rar",
            ".7z",
            ".mp4",
            ".avi",
            ".mkv",
            ".mp3",
            ".wav",
            ".aac",
            ".tar",
            ".gz",
            ".bz2",
            ".mov",
            ".flv",
            ".wmv",
            ".wps"
        ],
        "temporary_extensions": [
            ".crdownload",
            ".part",
            ".tmp",
            ".download"
        ],
        "stable_time": 5
    },
    "upload": {
        "target_groups": [
            "🐠【学虎】课件下载",
            "网校通群"

        ],
        "target_individuals": [
            "李老师呀"
        ],
        "database_path": "C:/Users/Administrator/PycharmProjects/wechat-automation-project/src/file_upload/counters.db",
        "auto_accept_friends": {
